html
    head
        title Artesanos.com - Amistades
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/style.css")
    body(data-user-id=user.id_usuario)
include navbar

block content
    .container
        h2 Mis Contactos

        if friends.length == 0
            p No tienes contactos a√∫n.
        else
            each friend in friends
                .user-card
                    img(src=friend.imagen_perfil || '/default.png', alt="Perfil", style="width: 60px; height: 60px; border-radius: 50%; margin-right: 1em;")
                    strong #{friend.nombre} #{friend.apellido}

        a(href="/") Volver al inicio