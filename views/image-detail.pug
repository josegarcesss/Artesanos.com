html
    head
        title Artesanos.com - Amistades
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/style.css")
    body
        include navbar

        block content
            h2 #{image.titulo}
            img(src=image.url_imagen style="max-width: 600px;")
            p #{image.descripcion}
            p Autor: #{image.autor}

            h3 Comentarios
            if comments.length == 0
                p A√∫n no hay comentarios.
            else
                ul
                    each comment in comments
                        li
                            strong #{comment.nombre}: 
                            span #{comment.texto}

            form(method="POST" action="/comment")
                input(type="hidden" name="imageId" value=image.id_imagen)
                label Tu comentario:
                textarea(name="text" required)
                br
                button(type="submit") Comentar

            if user.id_usuario == image.usuario_id
                form(action="/image/delete" method="POST" style="margin-top: 20px;")
                    input(type="hidden" name="imageId" value=image.id_imagen)
